<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.tobinatore.snapney.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Diesen Monat bis jetzt ausgegebenes Geld: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_money_this_month"
        android:textSize="22sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Letzten Monat ausgegebene Summe:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/text_money_last_month"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_money_last_month"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/text_money_this_month"
        android:textAlignment="viewStart"
        android:text="moneys" />
</RelativeLayout>
